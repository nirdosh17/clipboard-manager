{
  "name": "clipboard-manager",
  "version": "0.1.0",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:mac:universal": "electron-builder --mac --universal",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "clipboard",
    "manager",
    "electron",
    "tray",
    "utility"
  ],
  "author": "nrdshgtm@gmail.com",
  "license": "MIT",
  "description": "A system tray clipboard manager that keeps track of your copied items",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.nirdosh.clipboard-manager",
    "productName": "Clipboard Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "resources/icon-512.png"
    },
    "dmg": {
      "title": "Clipboard Manager",
      "icon": "resources/icon-512.png",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "pako": "^2.1.0"
  }
}
